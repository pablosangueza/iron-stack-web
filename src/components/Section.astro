---
interface Props {
  title: string;
  subtitle?: string;
  id?: string;
}

const { title, subtitle, id } = Astro.props;
---

<section id={id} class="section-wrap">
  <div class="max-w-3xl">
    <h2 class="text-2xl font-bold text-white md:text-3xl">{title}</h2>
    {subtitle && <p class="mt-4 text-base leading-relaxed">{subtitle}</p>}
  </div>
  <div class="mt-8">
    <slot />
  </div>
</section>
